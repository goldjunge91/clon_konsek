{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
    /* Skip type checking all .d.ts files. */,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    /* Control what method is used to detect module-format JS files. */
    "moduleDetection": "auto",
    "module": "esnext",
    // "module": "commonjs",
    "moduleResolution": "node",
    // "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // jsx "prserve" tut was ?
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
//    "strict": false,
//    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

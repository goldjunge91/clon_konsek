{
  "compilerOptions": {
    "target": "ESNext", // ES6 oder ESNext
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true, // vorher true
    "skipLibCheck": true,
    "noErrorTruncation": true /* Skip type checking all .d.ts files. */,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "auto" /* Control what method is used to detect module-format JS files.*/,
    // "module": "nodenext",
    "module": "esnext",
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "importHelpers": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cjs",
    "src/**/*.js",
    // "**/*.ts",
    // "**/*.tsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-auth.d.ts",
    "next-auth.d.ts"
    // ".next/types/**/*.ts"
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "docs"
  ]
}
